<h1><%= current_user.username %>'s Shopping Cart</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Quantity</th>
        <th>Item</th>
        <th>Price</th>
        <th>Subtotal</th>
        <th></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td>Total</td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tfoot>
    <tbody>
      <% @order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.quantity %></td>
          <td><%= order_product.product.title %></td>
          <td><%= number_to_currency order_product.product.price %> AUD</td>
          <td><%= number_to_currency order_product.product.price * order_product.quantity %> AUD</td>
          <td><%= link_to 'Remove', order_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Checkout', checkout_path %><br>
<small>*this will bring you to the payment page.</small><br>
<small>*shopping cart shall be clear after that, please double check you shopping list.</small><br>