<h1>Checkout Page</h1>
<h1 class="lead"><b>Proceeding to payment ...</b></h1><hr>

<ul>
  <% @order.products.each do |order| %>
    <li class="list_item lead"><i class="glyphicon glyphicon-ok text-success"></i> <%= order.title %></li>
  <% end %>
</ul>


<!-- for stripe -->
<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span class="lead">Total Amount:<b> $<%= @updatedPrice %>0 AUD</b></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Pleas fill up the form."
          data-billing-address= 'true'
          data-shipping-address= 'true'
          data-amount="<%= (@updatedPrice * 100).to_i %>"></script>
<% end %>