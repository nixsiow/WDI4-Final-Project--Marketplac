<h2><i class="glyphicon glyphicon-user"></i> Sign in</h2><hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div><%= f.label :email, :class => '' %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-control' %></div>
  </div>

  <div class="form-group">
    <div><%= f.label :password, :class => '' %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => '' %></div>
  <% end -%>

  <br />
  <div><%= f.submit "Sign in", :class => 'btn btn-success' %></div>
<% end %>

<br><hr>
<%= render "devise/shared/links" %>
