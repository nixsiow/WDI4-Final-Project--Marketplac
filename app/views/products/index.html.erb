
<div class="allProducts_container">
  <% @products.each do |product| %>
    <div class="indi_product">
      <p><%= link_to product.title, product %></p>
      <%= link_to (image_tag product.image_url), product %>
      <p>Description: <%= product.description %></p>
      <p>Price: <%= product.price %></p>
      <p>Stock: <%= product.stock %></p>
      <p><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></p><hr>
    </div>
  <% end %>
</div>