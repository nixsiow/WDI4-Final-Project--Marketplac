<h1>All Products</h1>

<% @products.each do |product| %>
  <div class="indi_product">
    <p><%= product.title %></p>
    <p><%= product.price %></p>
    <p><%= product.description %></p>
    <img src="<%= product.image_url %>">
    <p><%= product.stock %></p>
    <p><%= link_to 'Show', product %></p>
    <p><%= link_to 'Edit', edit_product_path(product) %></p>
    <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p><hr>
  </div>
<% end %>
